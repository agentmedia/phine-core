<tr data-tree-parent-id="<?php HtmlOut($this->ParentID()); ?>" data-tree-id="<?php echo $this->ItemID() ?>">
    <td>
        <a class="tree-toggler"></a>
            <?php HtmlOut($this->DisplayName())?>
    </td>
    <td>
        <?php if ($this->CanCreateIn()): ?>
        <a class="tiny secondary button tree-cut-hidden fa fa-arrow-right" href="<?php HtmlOut($this->CreateInUrl()) ?>" title="<?php TransOut('Core.PageContentTree.CreateIn')?>"></a>
        <?php endif; ?>
        <?php if ($this->CanCreateAfter()): ?>
        <a class="tiny secondary button tree-cut-hidden fa fa-arrow-down" href="<?php HtmlOut($this->CreateAfterUrl()) ?>" title="<?php TransOut('Core.PageContentTree.CreateAfter')?>"></a>
        <?php endif; ?>
        <?php if ($this->CanCreateIn()): ?>
        <a class="tiny button tree-insert-in fa fa-arrow-right" title="<?php TransOut('Core.PageContentTree.InsertIn')?>"></a>
        <?php endif; ?>
        <?php  if ($this->CanCreateAfter()):?>
        <a class="tiny button tree-insert-after fa fa-arrow-down" title="<?php TransOut('Core.PageContentTree.InsertAfter')?>"></a>
