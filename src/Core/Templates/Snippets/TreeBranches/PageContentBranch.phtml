        <a class="tiny button fa fa-scissors tree-cutter" title="<?php TransOut('Core.PageContentTree.Cut')?>"></a>
        <?php endif; ?>
        <?php if ($this->CanEdit() && $this->EditUrl()): ?>
        <a class="tiny button tree-cut-hidden fa fa-pencil" title="<?php TransOut('Core.PageContentTree.Edit')?>" href="<?php HtmlOut($this->EditUrl())?>"></a>
        <?php endif; ?>
        <?php if ($this->CanDelete()): ?>
        <a class="tiny tree-remover alert button fa fa-remove tree-cut-hidden" title="<?php TransOut('Core.PageContentTree.Delete')?>" data-tree-remove-message="<?php TransOut('Core.ModalDelete.Description.Name_{0}', $this->DisplayName()) ?>"></a>
